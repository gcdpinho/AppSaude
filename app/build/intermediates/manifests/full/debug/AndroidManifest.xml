<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.appsaude"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/simbolo_fundocolorido"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.appsaude.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.appsaude.ui.SintomasActivity"
            android:parentActivityName="br.com.appsaude.ui.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateUnchanged" />
        <activity
            android:name="br.com.appsaude.ui.EspecialistasActivity"
            android:parentActivityName="br.com.appsaude.ui.SintomasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="br.com.appsaude.ui.ProfissionaisActivity"
            android:parentActivityName="br.com.appsaude.ui.EspecialistasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="br.com.appsaude.ui.ExamesComplementaresActivity"
            android:parentActivityName="br.com.appsaude.ui.SinaisActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateUnchanged" />
        <activity
            android:name="br.com.appsaude.ui.SinaisActivity"
            android:parentActivityName="br.com.appsaude.ui.SintomasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateUnchanged" />
        <activity
            android:name="br.com.appsaude.ui.DoencasActivity"
            android:parentActivityName="br.com.appsaude.ui.ExamesComplementaresActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme3" />
    </application>

</manifest>